# Database Configuration
# Copy this file to .env and update with your local database credentials
# IMPORTANT: Never commit .env file to version control!

# ============================================================================
# DATABASE CONNECTION (REQUIRED)
# ============================================================================

# PostgreSQL connection string (required for Alembic and application)
# Format: postgresql://username:password@host:port/database
# For local development:
DATABASE_URL=postgresql://postgres:password@localhost:5432/tutor

# Alternative: Individual database components (if not using DATABASE_URL)
# Uncomment and use these if you prefer individual components
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=tutor
# DB_USER=postgres
# DB_PASSWORD=password

# ============================================================================
# DATABASE ROLE PASSWORDS (for migration 0.0.40__roles_and_permissions.sql)
# ============================================================================

# Database role passwords (used when creating roles in migration)
# Update the migration file manually or use a script to substitute these values
# These should be strong, unique passwords for production
DB_APP_USER_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_APP_READONLY_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_APP_MIGRATOR_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment
# Options: development, staging, production
ENVIRONMENT=development

# API Configuration
# API_BASE_URL=http://localhost:8000
# API_VERSION=v1

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Secret Key (for token generation)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# JWT Token expiration (in seconds)
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password reset OTP expiration (in seconds, default: 900 = 15 minutes)
# OTP_EXPIRATION_SECONDS=900

# Account lockout configuration
# MAX_LOGIN_ATTEMPTS=5
# LOCKOUT_DURATION_MINUTES=30

# ============================================================================
# EMAIL CONFIGURATION (for OTP and notifications)
# ============================================================================

# Email service provider
# Options: sendgrid, ses, mailgun, smtp
# EMAIL_PROVIDER=sendgrid

# SendGrid API Key (if using SendGrid)
# SENDGRID_API_KEY=your_sendgrid_api_key

# AWS SES Configuration (if using AWS SES)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# SMTP Configuration (if using SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=noreply@example.com

# ============================================================================
# AI SERVICE CONFIGURATION
# ============================================================================

# OpenAI API Key (for question generation, answer validation, hints, narratives)
# OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API Key (alternative to OpenAI)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# AI Model Configuration
# OPENAI_MODEL=gpt-4
# ANTHROPIC_MODEL=claude-3-opus-20240229

# ============================================================================
# TENANT CONFIGURATION
# ============================================================================

# Default tenant domain (for local development)
# DEFAULT_TENANT_DOMAIN=localhost

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
# LOG_FILE=logs/app.log

# ============================================================================
# CACHING CONFIGURATION (Redis)
# ============================================================================

# Redis connection URL (optional, for caching and session management)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limiting configuration
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=60
# RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed CORS origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

